{
    "manifest_version": 3,
    "name": "Life Agent Extension",
    "version": "1.0",
    "description": "Productivity assistant that monitors tabs and helps you stay focused.",
    "permissions": ["tabs", "storage", "notifications", "activeTab"],
    "host_permissions": ["<all_urls>"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content_script.js"],
        "run_at": "document_end"
      }
    ]
  }